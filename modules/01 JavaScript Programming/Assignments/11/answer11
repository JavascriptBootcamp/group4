//While-Loop

var i=1;
while(i <= 50){

    if(i%7 === 0)
        console.log(i + " boom");

    i++;
}

var x = 1;
while(x < 100){

    switch(true){

        case(x % 3 === 0 && x % 5 === 0):
            console.log(x + " fizzbuzz");
            break;
   
        case(x % 3 === 0):
            console.log(x + " buzz");
            break;

        case(x % 5 === 0):
            console.log(x + " fizz");
            break;

    }
    x++;
}
