function circular (ll) 
{
    var ptr = ll.head;
    var found = false;

    // checking ptr.next and ptr.next.next if just to be sure that i checking only what was allocated at first
    while(!found && ptr && ptr.next && ptr.next.next) {
        if (ptr === ptr.next.next){
            found = true;
        }
        else
            ptr = ptr.next;
    }
    if (found) {
        return true;
    } 
    else {
        return false;
    }
}
