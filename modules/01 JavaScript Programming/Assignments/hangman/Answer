function hangMan () {
    var setLife = 10;
    var arrPhrases = ["there is no place like home","two wrongs does not make a right","when in rome do as the romans","hope for the best but prepare for the worst","better late than never"];
    var win = false;
    // var letters = [];
    var onGoingConstructionArr =[]; // the on going construction array
    

    var phraseSelected = (function () {
        return Math.floor(Math.random() * (Math.floor(arrPhrases.length) - Math.ceil(0))) + Math.ceil(0);
    })();

    var selectedArr = arrPhrases[phraseSelected];

    // set the construction array size as the selected phase with "_"
    (function () {
        onGoingConstructionArr = new Array (selectedArr.length).fill("_");
    })();


    function setConstructedArr(char) {

        var index;
        var found = false;
        
        for (index = 0; index < selectedArr.length ; index++) {
            
            if (selectedArr[index] === char) {
                onGoingConstructionArr.splice(index,1,char);
                found = true;
            }
        }

        return found; 
    };


    function getInfoFromUser () {

        // return ;
    }

    function isWon () {

        var index;
        var won = true;

        for (index = 0; index < selectedArr.length; index++) {
            if (selectedArr[index] !== " ") {  
                if (selectedArr[index] !== onGoingConstructionArr[index]) {
                    won = false;     
                }      
            }
        }

        return won
    };
    
    while (!win && setLife) {
        
        var readlineSync = require('readline-sync');

        var char;
        
        console.log("Remainin lifes are:",setLife);
        console.log("Current found matches", onGoingConstructionArr.join(' '));

        char = readlineSync.question('input letter ');
        console.log(char);


        if (onGoingConstructionArr.includes(char) ) {
            console.log(char,"was used already...Try Again");
        } else {
            if(setConstructedArr(char)){    // returns if the char from the user is in the phrase or not
                console.log("Good Job!",char,"in the phrase");
                win = isWon();
            }
            else {
                console.log("The",char,"is not in the phrase");
                setLife--;
            }
        }
    }

    return win;
};

if (hangMan()) {
    console.log("You have won");
}
else {
    console.log("You Lost");
}
